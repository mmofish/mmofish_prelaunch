		<a href="#navbar-toggle"><i class="icon-cog icon-4x"></i></a><p class="beta-text">work in progress</p>
	</div>
	
<!-- The Hero-Unit -->
	<div class="row">
  		<div class="span10 offset1">
  			<%= render 'home_hero' %>  
