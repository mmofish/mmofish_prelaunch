	</div>

<!-- The MiddleNav-->
	<div class="row">
  		<div class="span12">
  			<%= render 'midnav'%>
  		</div>
	</div>
<!-- Just Below MiddleNav-->
	<div class="row">
				<div class="span5 offset1">
			<div class="row">	
